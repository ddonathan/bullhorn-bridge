{
  "name": "bullhorn-bridge",
  "version": "1.0.6",
  "description": "Framework-agnostic TypeScript client for Bullhorn ATS iframe integrations: secure post-robot messaging, automatic registration, events, and HTTP/UI helpers.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --module commonjs --outDir dist --declaration false",
    "build:esm": "tsc --module esnext --outDir dist --declaration false && mv dist/index.js dist/index.mjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:simple": "node build.js",
    "prepublishOnly": "npm run build:simple",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "bullhorn",
    "ats",
    "iframe",
    "integration",
    "post-robot",
    "api",
    "bridge",
    "staffing",
    "recruiting"
  ],
  "author": "Dan Donathan",
  "license": "MIT",
  "dependencies": {
    "post-robot": "^10.0.46"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddonathan/bullhorn-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/ddonathan/bullhorn-bridge/issues"
  },
  "homepage": "https://github.com/ddonathan/bullhorn-bridge#readme",
  "publishConfig": {
    "access": "public"
  }
}
